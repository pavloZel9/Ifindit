<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBD249"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:alpha=".8"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CB963B"
        android:fontFamily="casual"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:text="-I find IT-"
        android:textColor="#002200"

        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#CB963B"
        android:gravity="center"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:alpha=".5"
        android:background="#CB963B" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/imageProgress"
        android:layout_centerHorizontal="true"
        android:background="@drawable/r1"
        android:clickable="false" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="#f6f3c0" />

    <ProgressBar
        android:id="@+id/imageProgress"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="-180dp"
        android:background="@drawable/camer"
        android:onClick="clickcamera" />

    <Button
        android:id="@+id/button2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/load"
        android:gravity="center_vertical"
        android:onClick="gallery" />

    <Button
        android:id="@+id/button4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginRight="100dp"
        android:layout_marginTop="-415dp"
        android:background="@drawable/crop"
        android:shadowColor="#ffffff" />

    <Button
        android:id="@+id/button5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginRight="50dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/save"
        android:shadowColor="#000000" />

    <Button
        android:id="@+id/button6"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/take"
        android:shadowColor="#000000" />

    <Button
        android:id="@+id/takePicture"
        android:layout_width="86dp"
        android:layout_height="96dp"

        android:layout_gravity="center"
        android:layout_marginTop="430dp"
        android:background="@drawable/lupa"
        android:onClick="Clickc"
        android:singleLine="false"
        android:visibility="visible" />

    <Spinner
        android:id="@+id/spinnerVisionAPI"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/takePicture"
        android:layout_toStartOf="@+id/takePicture"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/visionAPIData"
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:layout_marginTop="-520dp"
        android:fadeScrollbars="false"
        android:gravity="center"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:selectAllOnFocus="false"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:visibility="visible" />

</LinearLayout>
